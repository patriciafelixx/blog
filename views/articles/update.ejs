<%- include('../partials/header') %>
<title>Atualizar Artigo</title>
</head>

<%- include('../partials/navbar') %>

<div class="container">

    <div class="card">
        <div class="card-header">
            <h2>Atualizar Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/admin/articles/update/<%= article.id %>" method="POST">
                <input type="text" class="form-control mb-3" name="title" placeholder="TÃ­tulo" value="<%= article.title%>">
                <textarea id="article" name="body" placeholder="Escreva aqui o seu artigo"><%= article.body%></textarea>
                <select class="form-control mt-3" name="category" id="">
                    <option selected value="<%= article.category.id %>"><%= article.category.title %></option>
                    <% categories.map(category => { %>
                        <% if (category.id != article.category.id) { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% } %>
                    <% }) %>
                </select>
                <button class="btn btn-success mt-3">Atualizar</button>
            </form>
        </div>
    </div>


</div>

<%- include('../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        language: 'pt_BR'
    })
</script>